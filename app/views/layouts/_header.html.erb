 <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Главная страница", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav pull-right">
            <li><%=link_to "User", '#' %></li>
            <li><%=link_to "Log in", '#' %></li>
            <% if logged_in? %>
            <li><%=link_to "Signups", 'signup_path' %></li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_signup %></li>
              <li><%= link_to "Settings", 'edit_signup_path(current_signup)' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>